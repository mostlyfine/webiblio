#checkout.row
  .col-md-8.col-md-offset-2
    .row.spacing
      h2 貸出
      .alert.alert-danger v-if="notice"
        | {{notice}}

    .row.spacing
      input.center-block autofocus="" type="text" v-model="isbn" @keyup.enter="fire"

    .row.spacing
      div.col-sm-2.book v-for="book in books"
        img src="{{book.medium_image_url}}"
        span "{{book.title}}"

    .row.spacing
      a.btn.btn-primary.btn-lg.btn-block href="/logout" 戻る

- content_for :js
  javascript:
    new Vue({
      el: "#checkout",
      data: {
        isbn: "",
        books: [],
        notice: ""
      },
      methods: {
        fire: function() {
          this.$http.post("/checkout", {isbn: this.isbn}, {emulateJSON: true}).then(function(response) {
            if(response.data.message) {
              this.notice = response.data.message;
            } else {
              this.books.push(response.data);
            }
          }, function(response) {
            console.log(response.data);
          });
          this.isbn = "";
        }
      }
    });

